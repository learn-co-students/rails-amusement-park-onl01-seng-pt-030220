<h1>Attraction <%= @attraction.name %></h1>

<h3>Total Number of Users: <%= @attraction.users.count %></h3>
<h3>Name: <%= @attraction.name %></h3>
<h3>Ticket Requirement: <%= @attraction.tickets %></h3>
<h3>Height Requirement: <%= @attraction.min_height %></h3>
<h3>Happiness Rating: <%= @attraction.happiness_rating %></h3>
<h3>Nausea Rating: <%= @attraction.nausea_rating %></h3>


<%#= button_to "Go on this ride", user_path(current_user) %>

<% if session[:admin] == true %>
    <%= link_to "Edit Attraction", edit_attraction_path%>
<% else %>
    <%= button_to "Go on this ride", rides_path, params: {attraction_id: @attraction.id} %>
<% end %>